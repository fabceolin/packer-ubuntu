{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc>",
        "chainloader (hd1)/srv/tftp/boot/grub/x86_64_e/shimx64.efi",
        "<enter>",
        "boot",
        "<enter>",
        "<wait5s>",
        "<esc>",
        "chainloader (hd0)/efi/boot/bootx64.efi",
        "<enter>",
        "boot"
      ],
      "boot_wait": "5s",
      "http_directory": "subiquity/ltsp",
      "iso_checksum": "sha256:f8e3086f3cea0fb3fefb29937ab5ed9d19e767079633960ccb50e76153effc98",
      "iso_urls": [
        "ubuntu-20.04.3-live-server-amd64.iso",
        "https://releases.ubuntu.com/20.04/ubuntu-20.04.3-live-server-amd64.iso"
      ],
      "memory": 1024,
      "name": "impish",
      "output_directory": "output/impish",
      "shutdown_command": "shutdown -P now",
      "ssh_handshake_attempts": "20",
      "ssh_password": "ubuntu",
      "ssh_pty": true,
      "ssh_timeout": "20m",
      "ssh_username": "ubuntu",
      "type": "qemu",
      "qemuargs": [
          [ "-drive" , "if=virtio,file=netboot.xyz.img,media=disk,index=4" ],
          [ "-drive" , "if=virtio,file=impish.iso,media=cdrom,index=3" ],
          [ "-bios",
            "/usr/share/qemu/OVMF.fd" 
          ],
          [ "-vga", 
            "virtio"
          ]
      ],
      "vnc_port_max": 5980,
      "vnc_port_min": 5900
    }
  ],
  "provisioners": [
    {
      "inline": [
        "ls /"
      ],
      "type": "shell"
    }
  ]
}

