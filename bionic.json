{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc>",

        "chainloader (hd1)/srv/tftp/boot/grub/x86_64_e/shimx64.efi",
        "<enter>",
        "boot",
        "<enter>",
        "<wait5s>",
        "<esc>",
        "chainloader (hd0)/efi/boot/bootx64.efi",
        "<enter>",
        "boot",
        "<enter>"
      ],
      "boot_wait": "5s",
      "http_directory": "subiquity/ltsp",
      "iso_checksum": "sha256:6c647b1ab4318e8c560d5748f908e108be654bad1e165f7cf4f3c1fc43995934",
      "iso_urls": [
        "ubuntu-18.04.6-live-server-amd64.iso",
        "https://releases.ubuntu.com/18.04/ubuntu-18.04.6-live-server-amd64.iso"
      ],
      "memory": 1024,
      "name": "bionic",
      "output_directory": "output/bionic",
      "shutdown_command": "shutdown -P now",
      "ssh_handshake_attempts": "20",
      "ssh_password": "ubuntu",
      "ssh_pty": true,
      "ssh_timeout": "20m",
      "ssh_username": "ubuntu",
      "type": "qemu",
      "qemuargs": [
          [ "-drive" , "if=virtio,file=netboot.xyz.img,media=disk,index=4" ],
          [ "-drive" , "if=virtio,file=bionic.iso,media=cdrom,index=3" ],
          [ "-bios",
            "/usr/share/qemu/OVMF.fd" 
          ],
          [ "-vga", 
            "virtio"
          ]
      ],
      "vnc_port_max": 5980,
      "vnc_port_min": 5900
    }
  ],
  "provisioners": [
    {
      "inline": [
        "ls /"
      ],
      "type": "shell"
    }
  ]
}

